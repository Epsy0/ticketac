<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Ticketac</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>

<%- include('header')%>

    <!-- main -->
      <div class="container">
        <div class="row">
          <div class="col-12">
            <br>
            <br>
            <p class="text-white h4 p-40">My tickets:</p>
            <br>

            <!-- table -->
            <div class="table-responsive">
              <table class="table table-hover bg-light">
                <thead>
                  <tr>
                    <th scope="col">N°</th>
                    <th scope="col">Journey</th>
                    <th scope="col">Date</th>
                    <th scope="col">Departure time</th>
                    <th scope="col">Price</th>
                  </tr>
                </thead>
                <tbody>
                  <% var totalPrice = 0;
                    for (var i = 0; i < journey.length; i++) { 
                    totalPrice = Number(journey[i].price) + Number(totalPrice) %>
                  <tr>
                    <td scope="col"><%=i%></td>
                    <td scope="col"><%=journey[i].departure%> / <%=journey[i].arrival%></td>
                    <td scope="col"><%=journey[i].date%></td>
                    <td scope="col"><%=journey[i].time%> pm</td>
                    <td scope="col"><%=journey[i].price%> €</td>
                  </tr>
                  <% } %>
                  <tr class="table-danger">
                    <td scope="col">Total</td>
                    <td scope="col"></td>
                    <td scope="col"></td>
                    <td scope="col"></td>
                    <td scope="col"><%=totalPrice%> €</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>  
            <!-- table -->

            <div class="col-12">
              <div class="d-flex flex-row-reverse offset-1">
                <a href="/homepage" type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal">Confirm</a>
              </div>
            </div>

            // Modal
            <div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <h5 class="modal-title" id="modalLabel">Order confirmation</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                  </div>
                  <div class="modal-body">
                    <% for (var i = 0; i < journey.length; i++) { %>
                    From <%=journey[i].departure%> to <%=journey[i].arrival%>, <%=journey[i].date%> <%=journey[i].time%> pm  :  <%=journey[i].price%> € </br>
                  <% } %>
                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <a href="/" type="submit" class="btn btn-primary">Confirm</a>
                  </div>
                </div>
              </div>
            </div>
      </div>
    <!-- end main -->

    <!-- footer -->
    <%- include('footer')%>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
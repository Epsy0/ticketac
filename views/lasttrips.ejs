<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Ticketac</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/style.css">
  </head>
  <body>

<%- include('header')%>

    <!-- main -->
    <div class="container">
        <div class="row">
          <div class="col-12">
          

            <!-- table -->
            <div class="container narrow d-flex flex-column">
              <h2 class="mt-5 text-light">My last trips :</h2>
              <div class="mt-3">
                <table class="table table-light">
                  <thead>
                    <tr>
                      <th scope="col">Date</th>
                      <th scope="col">journey</th>
                      <th scope="col">Departure Time</th>
                      <th scope="col">Price</th>
                    </tr>
                  </thead>
                  <tbody>
                   
                        <tr>
                          <th scope="row"><%= trips.date %></th>
                          <td><%= trips.departure %> / <%= trips.arrival %></td>
                          <td><%= trips.departureTime %></td>
                          <td><%= trips.price %> â‚¬</td>
                        </tr>
                  
                    <tr>
                      <th style="border-style: none;" class="bg-transparent" colspan="3"></th>
                      <td style="border-style: none;" class="bg-transparent">
                        <a href="/">
                          <button type="button" class="btn btn-danger">Home</button>
                        </a>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
        </div>

    <!-- end main -->
    </div>

    <!-- footer -->
    <%- include('footer')%>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>